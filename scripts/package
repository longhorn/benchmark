#!/bin/bash
set -e

source $(dirname $0)/version

ARCH=${ARCH:-"amd64"}
SUFFIX=""
[ "${ARCH}" != "amd64" ] && SUFFIX="_${ARCH}"

cd $(dirname $0)/..

TAG=${TAG:-${VERSION}${SUFFIX}}
REPO=${REPO:-longhornio}
IMAGE=${REPO}/kbench:${TAG}

docker build -t ${IMAGE} -f package/Dockerfile .
echo Built ${IMAGE}
